rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to get user data
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isSignedIn() && getUserData().role == 'admin';
    }
    
    // Helper function to check if user is operator or admin
    function isOperator() {
      return isSignedIn() && (getUserData().role == 'operator' || getUserData().role == 'admin');
    }
    
    // Users collection
    match /users/{userId} {
      // Allow users to read their own document
      allow read: if isSignedIn() && request.auth.uid == userId;
      
      // Allow admins to read all user documents
      allow read: if isAdmin();
      
      // Allow user creation during registration (for new users)
      allow create: if isSignedIn() && request.auth.uid == userId;
      
      // Allow admins to create, update, and delete users
      allow create, update, delete: if isAdmin();
    }
    
    // RTGs collection
    match /rtgs/{rtgId} {
      allow read: if isSignedIn();
      allow create, update: if isOperator();
      allow delete: if isAdmin();
    }
    
    // Work Orders collection
    match /workOrders/{orderId} {
      allow read: if isSignedIn();
      allow create, update: if isOperator();
      allow delete: if isAdmin();
    }
    
    // Inspections collection
    match /inspections/{inspectionId} {
      allow read: if isSignedIn();
      allow create, update: if isOperator();
      allow delete: if isAdmin();
    }
    
    // Reports collection
    match /reports/{reportId} {
      allow read: if isSignedIn();
      allow create: if isOperator();
      allow delete: if isAdmin();
    }
    
    // Zones collection
    match /zones/{zoneId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isOperator();
    }
  }
}
